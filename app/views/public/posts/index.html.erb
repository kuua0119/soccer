<div class="container my-5">
  <div class="mb-4">
    <span class="h3 fw-bold border-start border-3 border-primary ps-2 text-white title-bg">
      投稿一覧
    </span>
  </div>

  <% @posts.each do |post| %>
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
        <p class="card-text"><%= truncate(post.body, length: 100) %></p>
        <p>コメント数: <%= post.comments.count %></p>
        <% if post.image.attached? %>
          <%= image_tag post.image.variant(resize_to_fill: [300, 200]),class: "img-fluid rounded mt-2" %>
        <% end %>
        <div id="like-btn-<%= post.id %>">
          <%= render "public/likes/like_button", post: post %>
        </div>
        <small class="text-muted d-block mt-2">
          投稿者:
          <%= post.user.present? ? post.user.name : "退会済みユーザー" %>
          | <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
        </small>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @posts %>
</div>