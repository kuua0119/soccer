<div class="container my-5">
  <div class="mb-4">
    <span class="h3 fw-bold border-start border-3 border-primary ps-2 text-white title-bg">
      コミュニティ編集
    </span>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: @community, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :club_id, "メインクラブ", class: "form-label fw-bold" %>
          <%= f.collection_select :club_id, Club.all, :id, :name, { prompt: "クラブを選択してください" }, { class: "form-select" } %>
        </div>

        <div class="mb-3">
          <%= f.label :community_name, "コミュニティ名", class: "form-label fw-bold" %>
          <%= f.text_field :community_name, class: "form-control", placeholder: "コミュニティ名を入力してください" %>
        </div>

        <div class="mb-3">
          <%= f.label :introduction, "紹介文", class: "form-label fw-bold" %>
          <%= f.text_area :introduction, rows: 5, class: "form-control", placeholder: "コミュニティの紹介文を入力してください" %>
        </div>

        <div class="mb-3">
          <%= f.label :image, "コミュニティ画像", class: "form-label fw-bold" %>
          <%= f.file_field :image, class: "form-control" %>
          <% if @community.image.attached? %>
            <div class="mt-2">
              <%= image_tag @community.image, class: "img-thumbnail", size: "200x200" %>
            </div>
          <% end %>
        </div>

        <div class="mt-3">
          <%= f.submit "更新する", class: "btn btn-primary" %>
          <%= link_to "戻る", community_path(@community), class: "btn btn-outline-secondary ms-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>