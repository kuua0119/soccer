<div class="container mt-4">
  <h2>コミュニティ編集</h2>

  <%= form_with model: @community, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :introduction, "紹介文", class: "form-label" %>
      <%= f.text_area :introduction, rows: 5, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :image, "コミュニティ画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
      <% if @community.image.attached? %>
        <div class="mt-2">
          <%= image_tag @community.image, class: "img-thumbnail", size: "200x200" %>
        </div>
      <% end %>
    </div>

    <div class="mt-3">
      <%= f.submit "更新する", class: "btn btn-primary" %>
      <%= link_to "戻る", community_path(@community), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>