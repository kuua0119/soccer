<div class="container mt-4">
  <div class="mb-4">
    <span class="h3 fw-bold border-start border-3 border-primary ps-2 text-white title-bg">
      コミュニティ作成
    </span>
  </div>

  <% if @community.errors.any? %>
    <div class="alert alert-danger">
      <h5>作成に失敗しました</h5>
      <ul class="mb-0">
        <% @community.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: @community, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :club_id, "メインクラブ", class: "form-label fw-bold" %>
          <%= f.collection_select :club_id, Club.all, :id, :name, { prompt: "クラブを選択してください" }, { class: "form-select" } %>
        </div>

        <div class="mb-3">
          <%= f.label :community_name, "コミュニティ名", class: "form-label fw-bold" %>
          <%= f.text_field :community_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :introduction, "紹介文", class: "form-label fw-bold" %>
          <%= f.text_area :introduction, rows: 5, class: "form-control", placeholder: "コミュニティの紹介文を入力してください" %>
        </div>

        <div class="mb-3">
          <%= f.label :image, "コミュニティ画像", class: "form-label fw-bold" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div>
          <%= f.submit "作成する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>