<% if current_user.following?(user) %>
  <!-- フォロー解除ボタン -->
  <%= form_with model: current_user.active_relationships.find_by(followed_id: user.id),url: user_relationship_path(current_user.active_relationships.find_by(followed_id: user.id)),method: :delete,local: true do |f| %>
    <%= f.submit "フォロー解除", class: "btn btn-outline-danger btn-sm" %>
  <% end %>
<% else %>
  <!-- フォローするボタン -->
  <%= form_with url: user_relationships_path, method: :post, local: true do |f| %>
    <%= hidden_field_tag :followed_id, user.id %>
    <%= f.submit "フォローする", class: "btn btn-outline-success btn-sm" %>
  <% end %>
<% end %>