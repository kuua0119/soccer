<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="mb-3">
      <%= image_tag @community.image, width: 200, class: "rounded shadow-sm", alt: @community.community_name %>
    </div>

    <h3 class="card-title"><%= @community.community_name %></h3>
    <p class="text-muted">作成者: 
      <%= @community.user.present? ? @community.user.name : "退会済みユーザー" %>
    </p>
    <p><%= simple_format(@community.introduction) %></p>
    <%= link_to "コミュニティ削除", admin_community_path(@community),method: :delete,data: { confirm: "本当に削除しますか？" },class: "btn btn-danger" %>
  </div>
</div>

<!-- 参加メンバー一覧 -->
<div class="card shadow-sm">
  <div class="card-header bg-light">
    <i class="fas fa-users"></i> 参加メンバー一覧
  </div>
  <div class="card-body">
    <% if @members.any? %>
      <ul class="list-group">
        <% @members.each do |member| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= member.name %> 
            <small class="text-muted"><%= member.email %></small>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">メンバーはいません</p>
    <% end %>
  </div>
</div>