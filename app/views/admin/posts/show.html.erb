<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h3 class="card-title"><%= @post.title %></h3>

      <p class="text-muted">
        <%= @post.user.present? ? @post.user.name : "退会済みユーザー" %> さん
        | <%= l @post.created_at, format: :long %>
      </p>

      <% if @post.image.attached? %>
        <div class="mb-3">
          <%= image_tag @post.image, class: "img-fluid rounded shadow-sm" %>
        </div>
      <% end %>

      <p><%= simple_format(@post.body) %></p>

      <div class="mt-3">
        <% if @post.is_hidden? %>
          <%= button_to "公開に戻す", unhide_admin_post_path(@post),method: :patch,class: "btn btn-success",data: { confirm: "この投稿を公開に戻しますか？" } %>
        <% else %>
          <%= button_to "非公開にする", hide_admin_post_path(@post),method: :patch,class: "btn btn-warning",data: { confirm: "この投稿を非公開にしますか？" } %>
        <% end %>
        <%= link_to "一覧に戻る", admin_posts_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <div class="card shadow-sm">
      <div class="card-body p-2 mb-2">
        <h4>コメント一覧</h4>
        <% @post.comments.each do |comment| %>
          <div class="mb-3">
            <strong><%= comment.user.present? ? comment.user.name : "退会済みユーザー" %></strong>
            
            <% if comment.is_hidden? %>
              <p class="text-muted fst-italic">このコメントは非公開です</p>
            <% else %>
              <p><%= simple_format(comment.body) %></p>
            <% end %>

            <small class="text-muted"><%= l comment.created_at, format: :short %></small>

            <% if comment.is_hidden? %>
              <%= button_to "公開に戻す", unhide_admin_post_comment_path(@post, comment),method: :patch,class: "btn btn-sm btn-success ms-2",data: { confirm: "このコメントを公開に戻しますか？" } %>
            <% else %>
              <%= button_to "非公開にする", hide_admin_post_comment_path(@post, comment),method: :patch,class: "btn btn-sm btn-warning ms-2",data: { confirm: "このコメントを非公開にしますか？" } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>