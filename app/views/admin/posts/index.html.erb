<div class="container my-5">
  <h2 class="mb-4">投稿一覧</h2>

  <table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>投稿日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= link_to post.title, admin_post_path(post) %></td>
          <td>
            <%= post.user.present? ? post.user.name : "退会済みユーザー" %>
          </td>
          <td><%= l post.created_at, format: :short %></td>
          <td>
            <%= link_to "詳細", admin_post_path(post), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "削除", admin_post_path(post),method: :delete,data: { confirm: "本当に削除しますか？" },class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
     <%= will_paginate @posts %>
  </div>
</div>