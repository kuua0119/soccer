<div class="container my-5">
  <div class="title-bg text-white d-inline-block px-3 py-2 rounded">
    <h2 class="m-0">投稿一覧</h2>
  </div>

  <table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>投稿日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= link_to post.title, admin_post_path(post) %></td>
          <td>
            <%= post.user.present? ? post.user.name : "退会済みユーザー" %>
          </td>
          <td><%= l post.created_at, format: :short %></td>
          <td>
            <% if post.is_hidden? %>
              <%= button_to "公開に戻す", unhide_admin_post_path(post), method: :patch,class: "btn btn-sm btn-success" %>
            <% else %>
              <%= button_to "非公開にする", hide_admin_post_path(post), method: :patch,data: { confirm: "この投稿を非公開にしますか？" },class: "btn btn-sm btn-warning" %>
            <% end %>
            <%= link_to "削除", admin_post_path(post),method: :delete,data: { confirm: "本当に削除しますか？" },class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
     <%= will_paginate @posts %>
  </div>
</div>